{
  "name": "@oats/gen",
  "version": "0.1.0",
  "description": "A minimal OpenAPI to TypeScript generator",
  "bin": {
    "oats": "./bin/oats.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "test": "vitest",
    "prepublishOnly": "npm run build",
    "watch": "tsx src/index.ts watch",
    "watch:quiet": "tsx src/index.ts watch --quiet",
    "gen": "tsx src/index.ts gen",
    "gen:check": "tsx src/index.ts gen --check"
  },
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^11.0.0",
    "chokidar": "^3.6.0",
    "openapi-types": "^12.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "zod": "^3.22.0"
  },
  "peerDependencies": {
    "zod": "^3.22.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "openapi",
    "typescript",
    "codegen",
    "api"
  ],
  "author": "Lead Developer",
  "license": "MIT"
}
